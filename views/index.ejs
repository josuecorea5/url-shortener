<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/style.css">
  <link rel="shortcut icon" href="/images/favicon-url.png" type="image/x-icon">
  <script src="/javascripts/index.js" defer></script>
  <title>Url Shortener</title>
</head>
<body class="body">
  <nav class="navbar navbar-dark bg-primary mb-4">
    <div class="container-fluid">
      <a class="navbar-brand title-navbar" href="#"> 
        <img class="span-url" src="/images/url.png" alt="Hola">
        Shortener
      </a>
      </button>
    </div>
  </nav>
  <div class="container">
    <h1 class="text-center">Welcome to URL Shortener</h1>
    <form action="/shortUrl" method="post" class="my-2">
      <label for="fullUrl">URL</label>
      <div class="input-group mb-3 mt-3">
        <input type="text" name="fullUrl" class="form-control" required placeholder="Url" id="fullUrl">
        <button class="btn btn-outline-primary ms-4" type="submit" id="button-addon2">Shorten URL</button>
      </div>
    </form>
  
    <table class="table table-bordered table-responsive border-dark table-hover my-5">
      <thead>
        <tr>
          <th scope="col" class="text-center">Full Url</th>
          <th scope="col" class="text-center">Short Url</th>
          <th scope="col" class="text-center">Action</th>
          <th scope="col" class="text-center">Nums of click</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>     
          <tr>
            <td>
              <p><%= shortUrl.fullUrl %></p>
            </td>
            <td>
              <p><%= shortUrl.shortUrl  %></p>
            </td>
            <td>
              <p class="text-center"><span data-id="<%= shortUrl.shortUrl %> " class="badge badge-copy copy-url bg-secondary">Copy</span></p>
            </td>
            <td><%= shortUrl.clicks  %> </td>
          </tr>
        <% })%>   

      </tbody>
    </table>
  </div>
</body>
</html>